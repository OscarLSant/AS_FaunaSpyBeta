<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_faunaspy"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.as_faunaspyv3.homeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addLocationFragment"
            app:destination="@id/addLocationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_homeDetailsFragment"
            app:destination="@id/homeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/speciesFragment"
        android:name="com.example.as_faunaspyv3.speciesFragment"
        android:label="fragment_species"
        tools:layout="@layout/fragment_species" >
        <action
            android:id="@+id/action_speciesFragment_to_speciesDetailsFragment"
            app:destination="@id/speciesDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.as_faunaspyv3.accountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_editRegister"
            app:destination="@id/editRegister" />
        <action
            android:id="@+id/action_accountFragment_to_accountConfiguration"
            app:destination="@id/accountConfiguration" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.as_faunaspyv3.addAvistament"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_addLocationFragment"
            app:destination="@id/addLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/speciesDetailsFragment"
        android:name="com.example.as_faunaspyv3.speciesDetailsFragment"
        android:label="fragment_species_details"
        tools:layout="@layout/fragment_species_details" />
    <fragment
        android:id="@+id/addLocationFragment"
        android:name="com.example.as_faunaspyv3.addLocationFragment"
        android:label="fragment_add_location"
        tools:layout="@layout/fragment_add_location" />
    <fragment
        android:id="@+id/editRegister"
        android:name="com.example.as_faunaspyv3.AccountEditRegister"
        android:label="fragment_edit_register"
        tools:layout="@layout/fragment_edit_register" >
        <action
            android:id="@+id/action_editRegister_to_addLocationFragment"
            app:destination="@id/addLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeDetailsFragment"
        android:name="com.example.as_faunaspyv3.HomeDetailsFragment"
        android:label="fragment_home_details"
        tools:layout="@layout/fragment_home_details" />
    <fragment
        android:id="@+id/accountConfiguration"
        android:name="com.example.as_faunaspyv3.AccountConfiguration"
        android:label="fragment_account_configuration"
        tools:layout="@layout/fragment_account_configuration" />
</navigation>